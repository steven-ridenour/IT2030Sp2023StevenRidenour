@model List<ProductModel>
@{
    ViewData["Title"] = "Product List";
}

<h1 class="display-4 text-center text-succsess"> Product List</h1>
<p>This is a list of our products</p>
<table class="table table-hover table-responsive">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Product Description</th>
            <th>Product Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prod in @Model)
        {
            <tr>
                <td>@prod.ProductName</td>
                <td>
                    <img src="~/images/@prod.ProductImage" class="img-fluid rounded" />
                    <p>@prod.ProductDescription</p>
                </td>
                <td>@($"{prod.ProductPrice:C}") </td>
                <td>
                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@prod.ProductID">Detail</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Home</a>
