@model ContactModel

@{
    ViewData["Title"] = "Contact Us";
}
    <h1 class="mt-3 mb-4">@ViewBag.Title</h1> 

<div class="container"> 
    <div class="row">
        <div class="col-8">
            <h2>Our information</h2>
            <p><a href="https://goo.gl/maps/zF524CbGn3QCMyoA9">1240 E 9th St, Cleveland, OH 44199</a></p>
            <p><a href="tel:2168675409">(216)-867-5409.</a></p>
            <p><a href="mailto: info@stevensgamecorner.com">info@stevensgamecorner.com</a></p>
        </div>
        <div class="col-4">
            <div class="text-left">
                <h2>Hours of Operation</h2>
                <p>Monday-Friday: 11:00 AM - 11:00 PM</p>
                <p>Saturday: 10:00 AM - 11:00 PM</p>
                <p>Sunday: 12:00 PM - 11:00 PM</p>
            </div>

        </div>
    </div>
    <div class="row">
        <h3>Fill in your contact information in the form below:</h3>
    </div>
    <form asp-action="Index" method="post"> 
        <div class="row">
            <label asp-for="FirstName" 
                class="col-md-1 col-form-label"> 
                First Name: </label>
            <div class="col-md-3"> 
                <input asp-for="FirstName" class="form-control" /> 
            </div>
            <span asp-validation-for="FirstName" 
                class="col text-danger"></span>
        </div> 
        <div class="row">
            <label asp-for="LastName" 
                class="col-md-1 col-form-label"> 
                Last Name: </label>
            <div class="col-md-3"> 
                <input asp-for="LastName" class="form-control" /> 
            </div>
            <span asp-validation-for="LastName" 
                class="col text-danger"></span>
        </div> 
        <div class="row">
            <label asp-for="Address" 
                class="col-md-1 col-form-label"> 
                Address: </label>
            <div class="col-md-3"> 
                <input asp-for="Address" class="form-control" /> 
            </div>
            <span asp-validation-for="Address" 
                class="col text-danger"></span>
        </div> 
        <div class="row">
            <label asp-for="Phone" 
                class="col-md-1 col-form-label"> 
                Phone: </label>
            <div class="col-md-3"> 
                <input asp-for="Phone" class="form-control" /> 
            </div>
            <span asp-validation-for="Phone" 
                class="col text-danger"></span>
        </div> 
        <div class="row">
            <label asp-for="Email"
                class="col-md1 col-form-label">
                Email:</label>
            <div class="col-md-3">
                <input asp-for="Email" class="form-control" />
            </div>
            <span asp-validation-for="Email"
                class="col text-danger"></span>
        </div>
        <div class="row">
            <label asp-for="Message" 
                class="col-md-1 col-form-label"> 
                Message: </label>
            <div class="col-md-3"> 
                <textarea asp-for="Message" class="form-control message-box"></textarea>
            </div>
            <span asp-validation-for="Message" 
                class="col text-danger"></span>
        </div> 
        <div class="row"> 
            <div class="col offset-md-1"> 
                <button type="submit" class="btn btn-primary"> 
                    Submit</button> 
                <a asp-action="Index"
                    class="btn btn-outline-secondary">Clear</a> 
            </div> 
        </div> 
    </form> 
</div> 