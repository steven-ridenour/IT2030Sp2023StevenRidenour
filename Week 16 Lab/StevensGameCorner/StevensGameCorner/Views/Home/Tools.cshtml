@model MySession

@{
    ViewData["Title"] = "Tools";
}
<h1 class="mt-3 mb-4">@ViewBag.Title</h1>


<div class="container">
    <div class="row">
        <h3>These are the session state variables:</h3>
    </div>
    <form asp-action="Tools" method="post">
        <div class="row">
            <label asp-for="FirstName"
                   class="col-md-1 col-form-label">
                First Name:
            </label>
            <div class="col-md-3">
                <input asp-for="FirstName" class="form-control" value="@Context.Session.GetString("FirstName")" readonly />
            </div>
        </div>
        <div class="row">
            <label asp-for="LastName"
                   class="col-md-1 col-form-label">
                Last Name:
            </label>
            <div class="col-md-3">
                <input asp-for="LastName" class="form-control" value="@Context.Session.GetString("LastName")" readonly />                
            </div>
        </div>
        <div class="row">
            <label asp-for="Course"
                   class="col-md-1 col-form-label">
                Course:
            </label>
            <div class="col-md-3">
                <input asp-for="Course" class="form-control" value="@Context.Session.GetString("Course")" readonly/>
            </div>
        </div>
        <div class="row">
            <label asp-for="FavNum"
                   class="col-md-1 col-form-label">
                Favorite Number:
            </label>
            <div class="col-md-3">
                <input asp-for="FavNum" class="form-control" value="@Context.Session.GetInt32("FavNum")" readonly />
            </div>
        </div>
        <div class="row">
            <div class="col offset-md-1">
                <button type="submit" class="btn btn-primary">
                    Display Session Variables
                </button>
                <a asp-action="Tools" class="btn btn-outline-secondary">Clear</a>
            </div>
        </div>
    </form>
</div>


